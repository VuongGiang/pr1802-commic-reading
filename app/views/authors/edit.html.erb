<% provide :title, t('.edit_authors') %>
<h1><%= t '.edit_authors' %></h1>

<div class='col-md-6 col-md-offset-3'>
  <%= form_for @author do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.submit t('.save'), class: 'btn btn-primary' %>
  <% end %>
</div>
